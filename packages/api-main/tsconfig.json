{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "target": "es2018",
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "dist",
    "inlineSources": true,
    "inlineSourceMap": true
  },
  "experimentalDecorators": true,
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}